<div class="mt-3">
 <h1 class="text-center">Listing all categories</h1>
</div>

<div class="flickr_pagination">
    <%= will_paginate @categories, :container => false %>
</div>

<div class="container mt-3">
  <% @categories.each do |category| %>
    <div class="card text-center shadow mb-5 bg-white rounded custom-card-width">

        <div class="card-body">
        <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        <p class="card-text"><%= pluralize(category.articles.count, "articles") %></p>
        </div>

        <div class="card-footer text-muted">
            Created <%= time_ago_in_words(category.created_at) %>,
            edited <%= time_ago_in_words(category.updated_at) %>
        </div>
    </div>
  <% end %>
</div>

<div class="flickr_pagination mb-2">
    <%= will_paginate @categories, :container => false %>
</div>
